@import 'nib'

:host
    > article
        display block
        background-color #fff
        box-shadow 0 0 5px rgba(0, 0, 0, .3)
        border 2px solid var(--dark-color)
        border-radius 5px
        margin 1em auto
        max-width 1000px
        header
            display block
            padding 2em 2em 1em 2em
            h2
                color var(--dark-color)
                font-size 22px
                text-align justify
            h5
                font-size 13px
                color var(--secondary-color)
                display block
                text-align right
            #more
                display none
        > article-container
            display block
        > footer
            display block
            padding 1em

    #disqus_thread
        padding 1em
        min-height 100px

@media screen and (min-width: 600px)
    :host
        margin-bottom 2em
        > article
            header
                h2
                    font-size 30px
                h5
                    font-size 16px
