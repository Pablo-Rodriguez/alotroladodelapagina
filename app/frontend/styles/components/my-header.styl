@import 'nib'

:host
    display flex
    flex-wrap wrap
    align-items stretch
    background-color var(--primary-color)
    header
        flex 4 4 70%
        overflow hidden
        h1
            font-size 26px
            margin .75em auto
            color var(--light-color)
            margin-left 1em
    nav
        flex 1 1 30%
        display flex
        align-items stretch
        iron-selector
            flex 1
            display flex
            align-items stretch
            a
                padding 0 1em
                flex 1
                text-align center
                color var(--light-color)
                font-weight bold
                display flex
                align-items center
                &:hover
                    background-color var(--secondary-color)
                span
                    display block
                    width 100%

@media screen and (max-width: 375px)
    :host
        header
            flex-basis 100%
            h1
                text-align center
                font-size 20px
                margin .6em auto
        nav
            iron-selector
                flex 1
                a
                    font-size 14px
                    padding .8em
                    flex 1
                    span
                        display block

@media screen and (max-width: 600px) and (min-width: 376px)
    :host
        header
            flex-basis 100%
            h1
                text-align center
                margin-left 0
        nav
            iron-selector
                flex 1
                a
                    padding 1em
                    flex 1
                    span
                        display block
