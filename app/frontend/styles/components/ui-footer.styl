@import 'nib'

:host
    display block
    font-size 16px
    margin-top 1em
    background-color var(--dark-color)
    padding 1em
    padding-top 4em
    footer
        .goodreads
            margin-bottom 1em
            box-shadow 0 0 5px rgba(0, 0, 0, 0.3)
        > .wrapper
            .redes
            .header
                box-shadow 0 0 5px rgba(0, 0, 0, 0.3)
                background-color var(--light-color)
                padding 1em
                border-radius 5px
                margin-bottom 1em
            .header
                font-size 2em
                color var(--dark-color)
            .redes
                display flex
                flex-direction column
                align-items center
                ::content
                    ui-addon
                        margin 16px 0

@media screen and (min-width: 700px)
    :host
        footer
            display flex
            .goodreads
                flex 2
                margin 0 1em
            > .wrapper
                flex 1
                margin-bottom 0 1em
