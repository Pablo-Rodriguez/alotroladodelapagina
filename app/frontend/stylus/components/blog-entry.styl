@import 'nib'

:host
    display block
    background-color #fff
    padding 1em
    padding-right 0
    box-shadow 0 0 5px rgba(0, 0, 0, .3)
    border 2px solid var(--dark-color)
    border-radius 5px
    margin 1em auto
    max-width 1000px
    > article
        header
            display flex
            align-items center
            justify-content space-between
            h2
                cursor pointer
                color var(--dark-color)
                font-size 16px
                flex 1
                text-align justify
            h5
                display none
            #more
                flex 0 0 20%
                text-align center
                span
                    cursor pointer
                    background-color var(--secondary-color)
                    color var(--light-color)
                    border-radius 1000px
                    box-shadow 0 2px 3px rgba(0, 0, 0, .3)
                    font-size 170%
                    padding .2em
                    display block
                    margin 0 auto
                    width 1em
                    height 1em
                    &:hover
                        box-shadow 0 2px 6px rgba(0, 0, 0, .3)
                    &:active
                        box-shadow 0 2px 1px rgba(0, 0, 0, .3)
        > article-container
            display none
        > footer
            display none

@media screen and (min-width: 600px)
    :host
        padding 0
        margin-bottom 2em
        > article
            header
                display block
                padding 2em 2em 1em 2em
                h2
                    font-size 30px
                    &:hover
                        color var(--secondary-color)
                h5
                    font-size 16px
                    color var(--secondary-color)
                    display block
                    text-align right
                #more
                    display none
            > article-container
                display block
            > footer
                display block
                padding 1em
